<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.demo.lizejun.repocomponent">

    <!-- 监控网络的权限 -->
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".chapter1.LiveAppCompactActivity" />
        <activity android:name=".chapter2.LiveActivity" />
        <activity android:name=".chapter3.LiveDataActivity" />
        <activity android:name=".chapter4.LiveDataExtendActivity" />
        <activity android:name=".chapter5.ViewModelShareActivity"/>
        <activity android:name=".chapter6.PageActivity"/>
    </application>

</manifest>